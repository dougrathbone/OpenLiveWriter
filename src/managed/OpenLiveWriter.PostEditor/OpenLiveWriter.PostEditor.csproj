<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <AssemblyName>OpenLiveWriter.PostEditor</AssemblyName>
    <RootNamespace>OpenLiveWriter.PostEditor</RootNamespace>
    <ProjectGuid>{D6C9A393-E0B8-4548-B84B-F8B6FE2A5645}</ProjectGuid>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <DefineConstants>$(DefineConstants);CODE_ANALYSIS;WIN32</DefineConstants>
    <!-- Suppress obsolete override warnings (OnClosing/OnClosed), hiding warnings, and unused field warnings -->
