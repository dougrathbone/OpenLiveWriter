<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <AssemblyName>OpenLiveWriter.Localization</AssemblyName>
    <RootNamespace>OpenLiveWriter.Localization</RootNamespace>
    <ProjectGuid>{DF928A2F-38E3-4B1F-83CE-1FDFDE836D84}</ProjectGuid>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="..\GlobalAssemblyInfo.cs" Link="GlobalAssemblyInfo.cs" />
  </ItemGroup>

  <!-- Embedded Resources - use Update for auto-included .resx files -->
  <ItemGroup>
    <EmbeddedResource Update="Images.resx">
      <Generator>PublicResXFileCodeGenerator</Generator>
      <LastGenOutput>Images.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

  <!-- Auto-generated designer files -->
  <ItemGroup>
    <Compile Update="Images.Designer.cs">
      <AutoGen>True</AutoGen>
      <DesignTime>True</DesignTime>
      <DependentUpon>Images.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <!-- Content files -->
  <ItemGroup>
    <Content Include="Commands.xml" />
    <Content Include="DisplayMessages.xml" />
    <Content Include="CommandBitmaps\**\*.png" />
    <Content Include="Emoticons\**\*.png" />
  </ItemGroup>

  <!-- None items (not copied to output) -->
  <ItemGroup>
    <None Include="Strings.csv" />
  </ItemGroup>

  <!-- Project References -->
  <ItemGroup>
    <ProjectReference Include="..\OpenLiveWriter.Interop\OpenLiveWriter.Interop.csproj" />
  </ItemGroup>

</Project>
