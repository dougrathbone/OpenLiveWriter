<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <AssemblyName>OpenLiveWriter</AssemblyName>
    <RootNamespace>OpenLiveWriter</RootNamespace>
    <ProjectGuid>{4C45353C-8B67-4E88-BCCC-94FECE0FEA46}</ProjectGuid>
    <OutputType>WinExe</OutputType>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <StartupObject>OpenLiveWriter.ApplicationMain</StartupObject>
    <ApplicationIcon>..\OpenLiveWriter.CoreServices\Images\ApplicationIcon.ico</ApplicationIcon>
    <ApplicationManifest>OpenLiveWriter.exe.manifest</ApplicationManifest>
    <UseWindowsForms>true</UseWindowsForms>
    <!-- High DPI mode - replaces manifest-based dpiAware settings -->
    <ApplicationHighDpiMode>PerMonitorV2</ApplicationHighDpiMode>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="..\GlobalAssemblyInfo.cs" Link="GlobalAssemblyInfo.cs" />
  </ItemGroup>
  
  <!-- Exclude legacy test/sample forms that reference obsolete namespaces -->
  <ItemGroup>
    <Compile Remove="TestAutoDetection.cs" />
    <Compile Remove="TestMainForm.cs" />
    <Compile Remove="TestWizardMain.cs" />
    <Compile Remove="PaintingTestForm.cs" />
    <EmbeddedResource Remove="TestAutoDetection.resx" />
    <EmbeddedResource Remove="PaintingTestForm.resx" />
  </ItemGroup>

  <!-- Application manifest -->
  <ItemGroup>
    <None Include="OpenLiveWriter.exe.manifest">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Include="app.config" />
    <Content Include="WeblogPost.ico">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <!-- Template files required at runtime -->
  <ItemGroup>
    <Content Include="..\OpenLiveWriter.BlogClient\Detection\default.htm">
      <Link>template\default.htm</Link>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="..\OpenLiveWriter.BlogClient\Detection\defaultstyle.css">
      <Link>template\defaultstyle.css</Link>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <!-- Native Ribbon DLL (built from src/unmanaged/OpenLiveWriter.Ribbon) -->
  <!-- Build with: msbuild OpenLiveWriter.Ribbon.vcxproj /p:PlatformToolset=v145 (or v143 for VS2022) -->
  <ItemGroup Condition="Exists('..\bin\$(Configuration)\i386\Writer\OpenLiveWriter.Ribbon.dll')">
    <Content Include="..\bin\$(Configuration)\i386\Writer\OpenLiveWriter.Ribbon.dll">
      <Link>OpenLiveWriter.Ribbon.dll</Link>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <!-- NuGet Package References -->
  <ItemGroup>
    <PackageReference Include="DeltaCompressionDotNet" />
    <PackageReference Include="Mono.Cecil" />
    <PackageReference Include="Splat" />
    <PackageReference Include="squirrel.windows" />
  </ItemGroup>

  <!-- Project References -->
  <ItemGroup>
    <ProjectReference Include="..\OpenLiveWriter.Api\OpenLiveWriter.Api.csproj" />
    <ProjectReference Include="..\OpenLiveWriter.ApplicationFramework\OpenLiveWriter.ApplicationFramework.csproj" />
    <ProjectReference Include="..\OpenLiveWriter.BlogClient\OpenLiveWriter.BlogClient.csproj" />
    <ProjectReference Include="..\OpenLiveWriter.BrowserControl\OpenLiveWriter.BrowserControl.csproj" />
    <ProjectReference Include="..\OpenLiveWriter.Controls\OpenLiveWriter.Controls.csproj" />
    <ProjectReference Include="..\OpenLiveWriter.CoreServices\OpenLiveWriter.CoreServices.csproj" />
    <ProjectReference Include="..\OpenLiveWriter.Interop\OpenLiveWriter.Interop.csproj" />
    <ProjectReference Include="..\OpenLiveWriter.Localization\OpenLiveWriter.Localization.csproj" />
    <ProjectReference Include="..\OpenLiveWriter.PostEditor\OpenLiveWriter.PostEditor.csproj" />
  </ItemGroup>

</Project>
