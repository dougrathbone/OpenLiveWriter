<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <AssemblyName>OpenLiveWriter.CoreServices</AssemblyName>
    <RootNamespace>OpenLiveWriter.CoreServices</RootNamespace>
    <ProjectGuid>{9154B6B4-F2C3-4FB4-BE38-A26A6C9409EE}</ProjectGuid>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <!-- Expose internals to unit test project -->
  <ItemGroup>
    <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleToAttribute">
      <_Parameter1>OpenLiveWriter.UnitTest</_Parameter1>
    </AssemblyAttribute>
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\GlobalAssemblyInfo.cs" Link="GlobalAssemblyInfo.cs" />
  </ItemGroup>

  <!-- Exclude legacy/obsolete files that use unavailable .NET Framework APIs -->
  <ItemGroup>
    <Compile Remove="HTML\WebPageDownloader.cs" />
    <Compile Remove="HTML\AsyncPageDownload.cs" />
    <!-- InternetShortCut.cs re-enabled - simple COM interop -->
    <!-- MultiThreadedPageDownloader.cs re-enabled - namespace updated from Project31 to OpenLiveWriter -->
    <!-- CloseTrackingHttpWebRequest.cs re-enabled - rewritten without RealProxy for .NET 10 -->
    <Compile Remove="DataObject\SearchReferrerChain.cs" />
    <Compile Remove="ComponentRootDesigner.cs" />
    <Compile Remove="Diagnostics\UnexpectedErrorMessageDesigner.cs" />
  </ItemGroup>

  <!-- Embedded resources -->
  <ItemGroup>
    <EmbeddedResource Include="Images\*.ico" />
    <EmbeddedResource Include="Images\*.png" />
    <EmbeddedResource Include="Images\*.jpg" />
    <EmbeddedResource Include="Marketization\Markets.xml" />
    <EmbeddedResource Include="Marketization\Master.xml" />
  </ItemGroup>

  <!-- Designer-generated files -->
  <ItemGroup>
    <Compile Update="Exceptions.Designer.cs">
      <AutoGen>True</AutoGen>
      <DesignTime>True</DesignTime>
      <DependentUpon>Exceptions.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Exceptions.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Exceptions.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

  <!-- Reference to interop DLL -->
  <ItemGroup>
    <Reference Include="OpenLiveWriter.Interop.SHDocVw">
      <HintPath>..\OpenLiveWriter.Interop\Com\OpenLiveWriter.Interop.SHDocVw.dll</HintPath>
    </Reference>
  </ItemGroup>

  <!-- Project References -->
  <ItemGroup>
    <ProjectReference Include="..\MarketXmlGenerator\MarketXmlGenerator.csproj" />
    <ProjectReference Include="..\OpenLiveWriter.BrowserControl\OpenLiveWriter.BrowserControl.csproj" />
    <ProjectReference Include="..\OpenLiveWriter.HtmlParser\OpenLiveWriter.HtmlParser.csproj" />
    <ProjectReference Include="..\OpenLiveWriter.Interop.Mshtml\OpenLiveWriter.Interop.Mshtml.csproj" />
    <ProjectReference Include="..\OpenLiveWriter.Interop\OpenLiveWriter.Interop.csproj" />
    <ProjectReference Include="..\OpenLiveWriter.Localization\OpenLiveWriter.Localization.csproj" />
  </ItemGroup>

  <!-- Market XML generation target (will be updated in build system phase) -->
  <PropertyGroup>
    <MasterXmlPath>$(MSBuildProjectDirectory)\..\..\..\intl\markets\Master.xml</MasterXmlPath>
    <MasterXmlOutput>$(MSBuildProjectDirectory)\Marketization\Master.xml</MasterXmlOutput>
    <MarketsXmlPath>$(MSBuildProjectDirectory)\Marketization\Markets.xml</MarketsXmlPath>
    <MarketsSourceDataFolder>$(MSBuildProjectDirectory)\..\..\..\intl\markets</MarketsSourceDataFolder>
  </PropertyGroup>

</Project>
